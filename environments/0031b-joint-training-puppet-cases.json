{
  "name": "0031b Joint Training of Puppet and Cases",
  "description": "Transfer Learning, Augmentation 1x to 10x",
  "batch_size": 1,
  "epochs": 1000,
  "max_image_side_length": 512,
  "datasets": [
    {
      "name": "puppet_measure_bands",
      "split": [
        1.0,
        0,
        0
      ],
      "augmentation": {
        "type": "affine",
        "params": {
          "scale": "(1.0, 6.0)",
          "translate_percent": {
            "x": "(-0.5, 0.5)",
            "y": "(-0.5, 0.5)"
          }
        }
      }
    },
    {
      "name": "cases",
      "split": [
        0.67,
        0.165,
        0.165
      ],
      "split_by_filename_base": true,
      "augmentation": {
        "type": "affine",
        "params": {
          "scale": "(1.0, 6.0)",
          "translate_percent": {
            "x": "(-0.5, 0.5)",
            "y": "(-0.5, 0.5)"
          }
        }
      }
    }
  ],
  "shuffle_dataset": true,
  "shuffle_seed": 0,
  "k_fold_x_val": 4,
  "x_val_k": 1,
  "learning_rate": 0.0001,
  "use_transfer_learning": true,
  "allow_base_layer_training": true,
  "center_color_to_imagenet": true,
  "simplify_classes": true
}